<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_3x3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="252dp"
            android:text="Board3x3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_4x4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Board4x4"
            app:layout_constraintEnd_toEndOf="@+id/btn_3x3"
            app:layout_constraintStart_toStartOf="@+id/btn_3x3"
            app:layout_constraintTop_toBottomOf="@+id/btn_3x3" />

        <Button
            android:id="@+id/btn_5x5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Board5x5"
            app:layout_constraintEnd_toEndOf="@+id/btn_4x4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btn_4x4"
            app:layout_constraintTop_toBottomOf="@+id/btn_4x4" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>